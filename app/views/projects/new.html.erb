<%= simple_form_for(@project) do |f| %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :description %>
  <%= f.input :creation_date, as: :date, html5: true %>
  <%= f.label :category %>
  <%= f.collection_radio_buttons :category_id, Category.all, :id, :name %>
  <%= f.input :account, as: :select, collection: [['Yes', true], ['No', false]] %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>

<%= link_to 'retour', root_path %>
