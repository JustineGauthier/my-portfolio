<div class="background-show show">
  <div class="container white-background">
    <a href="<%=root_path%>" class="back-to-menu">
      <i  class="arrow"></i>
    </a>
    <h1><%= @project.title %></h1>
    <div class="project-infos">
      <img src="<%= cl_image_path @project.photo.key, radius: 20 %>" alt="project">
      <div class="project-description">
        <h2><%= @project.category.name %></h2>
        <p><i class="fa-solid fa-caret-right"></i> <%= @project.description %></p>
        <p><i class="fa-solid fa-caret-right"></i> Projet réalisé en <%= ConvertDate.new(date: @project.creation_date.to_s).call %>.</p>
        <p class="project-link"><i class="fa-solid fa-caret-right"></i> <%= link_to " Découvrir ce projet !", @project.url, class: "project_url", target: :_blank %></p>
      </div>
    </div>
  </div>
</div>
